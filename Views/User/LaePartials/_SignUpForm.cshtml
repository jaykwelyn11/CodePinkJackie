@model User

<main class="signup">
    <div class="divider">
        <div class="left-side">
            <img id="video_overlays" src="~/images/yourein.png" alt="you're in words">
            <video id="myvideo" src="~/videos/heart.mov" autoplay muted loop></video>
        </div>
        <div class="right-side">
            <div class="formdivy">
                <div class="formheader">
                    <img class="reglogo" src="~/images/navbarimages/sweetsi2.png" alt="Logo">
                    <h2 class="formtitle">Sign Up</h2>
                </div>
                <form id="signupform" asp-action="Register" asp-controller="User" method="Post">
                    <h1 id="SignUpHeader">Sign Up</h1>
                    <section class="signupsection">
                        <label asp-for="FirstName" class="input-label">First Name</label>
                        <input type="text" name="FirstName" class="input-field">
                        <span asp-validation-for="FirstName"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="LastName" class="input-label">Last Name</label>
                        <input asp-for="LastName" class="input-field">
                        <span asp-validation-for="LastName"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="Nickname" class="input-label">Nickname</label>
                        <input asp-for="Nickname" class="input-field">
                        <span asp-validation-for="Nickname"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="Email" class="input-label">Email <Address></Address></label>
                        <input asp-for="Email" class="input-field">
                        <span asp-validation-for="Email"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="DateOfBirth" class="input-label">Date of Birth</label>
                        <input type="Date" asp-for="DateOfBirth" class="input-field">
                        <span asp-validation-for="DateOfBirth"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="ParentIdImage" class="input-label">School Id Image</label>
                        <input asp-for="ParentIdImage" class="input-field">
                        <span asp-validation-for="ParentIdImage"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="SchoolIdImage" class="input-label">School Id Image</label>
                        <input asp-for="SchoolIdImage" class="input-field">
                        <span asp-validation-for="SchoolIdImage"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="Password" class="input-label">Password</label>
                        <input type="password" asp-for="Password" class="input-field">
                        <span asp-validation-for="Password"></span>
                    </section>
                    <section class="signupsection">
                        <label asp-for="ConfirmPassword" class="input-label">Confirm Password</label>
                        <input type="password" asp-for="ConfirmPassword" class="input-field">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </section>
                    <div>
                        <button class="action-button">Sign Up</button>
                    </div>
                    <section>
                        <p>By signing up you are agreeing to our <a href="#">Terms and Conditions</a></p>
                    </section>
                </form>
            </div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</main>