@model Product

<h1>Add new product</h1>
<form class="shadow p-3" asp-controller="Product" asp-action="CreateProduct" method="Post">
    <div class="mb-3">
        <label asp-for="Name">Product Name :</label>
        <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Name">
    </div>
    @* <div class="mb-3">
        <label asp-for="Category">Category :</label>
        <span asp-validation-for="Category" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Category">
        </div> *@
    <label for="category">Category :</label>
    <span asp-validation-for="Category" class="text-danger font-weight-bold"></span>
    <select name="Category" id="Category">
        <option value="Laptops">Laptops</option>
        <option value="Headphones">Headphones</option>
        <option value="Accessories">Tech Accessories</option>
        <option value="Tablets">Tablets</option>
        <option value="Furniture">Furniture</option>
        <option value="Desk Accessories">Desk Accessories</option>
    </select>
    <div class="mb-3">
        <label asp-for="Price">Price :</label>
        <span asp-validation-for="Price" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label asp-for="Img1">First Image URL :</label>
        <span asp-validation-for="Img1" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Img1">
    </div>
    <div class="mb-3">
        <label asp-for="Img2">Second Image URL :</label>
        <span asp-validation-for="Img2" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Img2">
    </div>
    <div class="mb-3">
        <label asp-for="Img3">Third Image URL :</label>
        <span asp-validation-for="Img3" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Img3">
    </div>
    <div class="mb-3">
        <label asp-for="Img4">Fourth Image URL :</label>
        <span asp-validation-for="Img4" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Img4">
    </div>
    <div class="mb-3">
        <label asp-for="Img5">Fifth Image URL :</label>
        <span asp-validation-for="Img5" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Img5">
    </div>
    <div class="mb-3">
        <label asp-for="Description">Description of product :</label>
        <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
        <input class="form-control" asp-for="Description">
    </div>
    <button class="button-56">Add Product</button>
</form>